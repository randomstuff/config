root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.{py,pl,java}]
# See PEP-008 for Python, perlstyle for Perl
indent_style = space
indent_size = 4

[*.java]
indent_style = space
indent_size = 4
tabs_width = 8
